.main {
  height: 100%

  .container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: .875rem;
    box-sizing: border-box;
    zoom: 1;
    overflow: auto;
    min-height: 766px;
    padding-top: 4.5rem;
    padding-bottom: 2.875rem;
    justify-content: center;
    background-color: #eff4f9;

    .container-header {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 72px;
      background-color: #fff;
      display: flex;
      align-items: center;
      box-shadow: 0 1px 4px 0 rgba(38, 38, 38, .1);
      color: #1f1f1f;
      z-index: 100000;

      .logo-img {
        display: block;
        width: 7.5625rem;
        height: 34px;
      }

      .logo {
        position: relative;
        margin: 0 34px 0 40px;

        &::after {
          content: '|';
          width: 1px;
          height: 20px;
          color: #F0F0F0;
          position: absolute;
          top: 50%;
          right: -17px;
          transform: translate(0, -50%);
        }
      }
    }


    .container-content {
      box-sizing: border-box;
      //box-shadow: 0 5px 5px -3px rgb(0 0 0 / 20%), 0 8px 10px 1px rgb(0 0 0 / 14%), 0 3px 14px 2px rgb(0 0 0 / 12%);
    }

    .container-content {
      text-align: center;
      height: 472px;
      width: 984px;
      margin-right: auto;
      margin-left: auto;
      margin-top: calc((100vh - 470px) / 3);

      .login-left {
        height: 100%;
        width: 50%;
        float: left;

        .bg-left {

        }
      }

      .login-right {
        text-align: center;
        background-color: white;
        float: right;
        height: 100%;
        width: 50%;

        .login-switch {
          font-size: 30px
          float: right;
          margin-right: 10px;
        }

        .login-title {
          padding: 60px 10px 10px;
        }

        .login-title-text {
          font-size: 21px;
          font-weight: 400;
          color: #151515;
          letter-spacing: 0;
        }

        .login-title-message {
          line-height: 17px;
          color: #999999;
        }
      }
    }

    .container-footer {
      .copyright {
        position: absolute;
        bottom: 1.5rem;
        left: 50%;
        transform: translate(-50%);
        line-height: 22px;
        font-size: .875rem;
        color: #8c8c8c;
      }
    }
  }
}

.login-form {
  position: relative;
  min-height: 1px;
  padding-right: 15px;
  padding-left: 15px;
  margin: 22px;

  .login-form-button {
    margin-top: 20px;
    color: #fff;
    padding: 10px 30px;
    font-size: 13px;
    display: inline-block;
    letter-spacing: 1px;
    text-transform: uppercase;
    border-radius: 1px;
    width: 100%;
  }
}

